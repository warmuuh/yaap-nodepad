extends ../layout

block content
	h1|Your Documents:
	p
		a(class='button', href='/documents/new') 
			|+ New Document
	ul
		- for (var d in documents)
			li
				a(class='button', href='/documents/'+documents[d]._id+'/edit')
					| Edit
				a(class='button destroy', href='#', data-ref='/documents/'+documents[d]._id)
					| Delete
				=documents[d].title